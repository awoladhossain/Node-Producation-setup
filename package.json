        "@types/express": "^5.0.6",
        "@types/node": "^25.0.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "nodemon": "^3.1.11",
        "prettier": "3.7.4",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.51.0"
    },
    "dependencies": {
        "cross-env": "^10.1.0",
